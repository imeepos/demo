{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!{.env,.env.*}",
        "!**/*.test.{js,jsx,ts,tsx}",
        "!**/*.spec.{js,jsx,ts,tsx}",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**"
      ],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:run": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}", "!dist/**", "!build/**"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}", "!dist/**", "!build/**"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!{.env,.env.*}",
        "!**/*.test.{js,jsx,ts,tsx}",
        "!**/*.spec.{js,jsx,ts,tsx}",
        "!dist/**",
        "!build/**"
      ]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}", "!dist/**", "!build/**"],
      "cache": false
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", "!{.env,.env.*}", "!dist/**", "!build/**"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "turbo.json",
    "tsconfig.json",
    "eslint.config.js",
    ".prettierrc",
    "tailwind.config.js",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "TURBO_REMOTE_ONLY"
  ]
}
