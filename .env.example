# 数据库环境变量配置文件
# 复制此文件为 .env 并根据需要修改配置

# ========================================
# 应用程序配置
# ========================================
NODE_ENV=development
API_URL=http://localhost:3001/api
API_TIMEOUT=10000

# Authentication
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# ========================================
# PostgreSQL 配置
# ========================================
POSTGRES_DB=sker_db
POSTGRES_USER=sker_user
POSTGRES_PASSWORD=sker_password_change_me
POSTGRES_PORT=5432

# ========================================
# Redis 配置
# ========================================
REDIS_PASSWORD=sker_redis_password_change_me
REDIS_PORT=6379

# ========================================
# RabbitMQ 配置
# ========================================
RABBITMQ_USER=sker_admin
RABBITMQ_PASSWORD=sker_rabbitmq_password_change_me
RABBITMQ_VHOST=sker_vhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ========================================
# MongoDB 配置
# ========================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=sker_mongo_password_change_me
MONGO_DB=sker_mongo_db
MONGO_PORT=27017

# ========================================
# 管理界面配置
# ========================================
# MongoDB Express
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=sker_express_password_change_me
MONGO_EXPRESS_PORT=8081

# pgAdmin
PGADMIN_EMAIL=admin@sker.local
PGADMIN_PASSWORD=sker_pgadmin_password_change_me
PGADMIN_PORT=8080

# ========================================
# 应用程序数据库连接字符串
# ========================================
# PostgreSQL
DATABASE_URL=postgresql://sker_user:sker_password_change_me@localhost:5432/sker_db

# Redis
REDIS_URL=redis://:sker_redis_password_change_me@localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://sker_admin:sker_rabbitmq_password_change_me@localhost:5672/sker_vhost

# MongoDB
MONGODB_URL=mongodb://admin:sker_mongo_password_change_me@localhost:27017/sker_mongo_db?authSource=admin

# External Services
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=